<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dip" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/avatarPic_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dip"
                    android:layout_marginTop="10dip"
                    android:layout_weight="1.0"
                    android:contentDescription="@string/userAvatar"
                    android:scaleType="fitCenter"
                    android:maxHeight="42dip"
                    android:maxWidth="200dip"
                    android:minHeight="42dip"
                    android:minWidth="50dip"
                    android:src="@drawable/avatar_color" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1.0" >

                    <TextView
                        android:id="@+id/userLogonName_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="10dip"
                        android:layout_marginTop="10dip"
                        android:text="@string/logonName"
                        android:textColor="#ffffff"
                        android:textSize="24dip" />

                    <EditText
                        android:id="@+id/userLogonName_edit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_below="@+id/userLogonName_text"
                        android:layout_marginLeft="10dip"
                        android:layout_marginRight="10dip"
                        android:inputType="text" />

                    <Spinner
                        android:id="@+id/userManage_spinner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_below="@+id/userLogonName_edit"
                        android:layout_marginLeft="10dip"
                        android:layout_marginRight="10dip"
                        android:entries="@array/logonArray" />

                    <Spinner
                        android:id="@+id/userSex_spinner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_below="@+id/userManage_spinner"
                        android:layout_marginLeft="10dip"
                        android:layout_marginRight="10dip"
                        android:entries="@array/sexArray" />
                </RelativeLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/userName_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:text="@string/userName"
                android:textColor="#ffffff"
                android:textSize="24dip" />

            <EditText
                android:id="@+id/userName_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:inputType="text" />

            <TextView
                android:id="@+id/userIdNum_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:text="@string/userIdNum"
                android:textColor="#ffffff"
                android:textSize="24dip" />

            <EditText
                android:id="@+id/userIdNum_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:inputType="number" />

            <TextView
                android:id="@+id/userPhone_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:text="@string/userPhone"
                android:textColor="#ffffff"
                android:textSize="24dip" />

            <EditText
                android:id="@+id/userPhone_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:inputType="number" />

            <Spinner
                android:id="@+id/userDepartment_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:entries="@array/departmentArray" />

            <TextView
                android:id="@+id/userDes_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:text="@string/userDes"
                android:textColor="#ffffff"
                android:textSize="24dip" />

            <EditText
                android:id="@+id/userDes_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:inputType="textMultiLine"
                android:maxHeight="200dip"
                android:minHeight="100dip"
                android:scrollHorizontally="false" />
        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/null_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dip"
        android:layout_marginTop="10dip"
        android:text=""
        android:textColor="#ffffff"
        android:textSize="1dip" />

</LinearLayout>