<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/myPatientAvatar_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dip"
            android:layout_weight="2.0"
            android:contentDescription="@string/userAvatar"
            android:maxHeight="42dip"
            android:maxWidth="200dip"
            android:minHeight="42dip"
            android:minWidth="50dip"
            android:scaleType="fitCenter"
            android:src="@drawable/avatar_color" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/myPatientLogonName_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:layout_marginTop="10dip"
                android:text="@string/logonName"
                android:textColor="#ffffff"
                android:textSize="12dip" />

            <TextView
                android:id="@+id/myPatientName_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:layout_marginTop="10dip"
                android:text="@string/logonName"
                android:textColor="#ffffff"
                android:textSize="24dip" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/myPatientDes_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dip"
        android:layout_marginTop="10dip"
        android:inputType="textMultiLine"
        android:text="@string/logonName"
        android:textColor="#ffffff"
        android:textSize="20dip" />

    <TextView
        android:id="@+id/null_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dip"
        android:layout_marginTop="10dip"
        android:text=""
        android:textColor="#ffffff"
        android:textSize="1dip" />

</LinearLayout>